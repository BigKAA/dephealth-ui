{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" }
  ],
  "annotations": {
    "list": [
      {
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "enable": false,
        "expr": "changes(app_dependency_health{namespace=~\"$namespace\"}[1m]) > 0",
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Health state changes",
        "tagKeys": "dependency,host",
        "titleFormat": "{{dependency}} @ {{host}}:{{port}}"
      }
    ]
  },
  "description": "Root cause analysis for dependency failures — identify leaf failures and cascade impact",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "apps",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Service List",
      "type": "link",
      "url": "/d/dephealth-service-list/"
    },
    {
      "asDropdown": false,
      "icon": "bolt",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Cascade Overview",
      "type": "link",
      "url": "/d/dephealth-cascade-overview/"
    }
  ],
  "panels": [
    {
      "id": 1,
      "title": "Root Causes",
      "description": "Leaf failures — dependencies that are DOWN and have no own failing dependencies",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "count(\n  (group by (dependency) (app_dependency_health{namespace=~\"$namespace\"} == 0))\n  unless on (dependency)\n  label_replace(\n    group by (name) (app_dependency_health{namespace=~\"$namespace\"} == 0),\n    \"dependency\", \"$1\", \"name\", \"(.*)\"\n  )\n) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 2,
      "title": "Cascade Affected",
      "description": "Services depending on services that have their own failures (transitive impact)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "count(\n  group by (name, namespace, dependency) (\n    label_replace(\n      app_dependency_health{namespace=~\"$namespace\"},\n      \"dep_name\", \"$1\", \"dependency\", \"(.*)\"\n    )\n    and on (dep_name)\n    label_replace(\n      group by (name) (app_dependency_health{namespace=~\"$namespace\"} == 0),\n      \"dep_name\", \"$1\", \"name\", \"(.*)\"\n    )\n  )\n) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 3,
      "title": "Total Failures",
      "description": "Total number of dependency health check failures",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "count(app_dependency_health{namespace=~\"$namespace\"} == 0) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 4,
      "title": "Root Cause Analysis",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 4 },
      "collapsed": false
    },
    {
      "id": 5,
      "title": "Root Causes",
      "description": "Dependencies that are DOWN and do not have their own failing dependencies — the actual root causes",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 5 },
      "targets": [
        {
          "expr": "(group by (dependency) (app_dependency_health{namespace=~\"$namespace\"} == 0))\nunless on (dependency)\nlabel_replace(\n  group by (name) (app_dependency_health{namespace=~\"$namespace\"} == 0),\n  \"dependency\", \"$1\", \"name\", \"(.*)\"\n)",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true
            },
            "renameByName": {
              "dependency": "Root Cause"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Root Cause" },
            "properties": [
              { "id": "custom.width", "value": 300 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": { "show": false }
      }
    },
    {
      "id": 6,
      "title": "All Failures",
      "description": "All dependency health check failures with service context",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 11 },
      "targets": [
        {
          "expr": "app_dependency_health{namespace=~\"$namespace\"} == 0",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true,
              "__name__": true,
              "instance": true,
              "pod": true,
              "critical": true
            },
            "indexByName": {
              "job": 0,
              "namespace": 1,
              "dependency": 2,
              "type": 3,
              "host": 4,
              "port": 5
            },
            "renameByName": {
              "job": "Service",
              "namespace": "Namespace",
              "dependency": "Dependency",
              "type": "Type",
              "host": "Host",
              "port": "Port"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Service" },
            "properties": [
              { "id": "custom.width", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Dependency" },
            "properties": [
              { "id": "custom.width", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Type" },
            "properties": [
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Host" },
            "properties": [
              { "id": "custom.width", "value": 260 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Port" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Service", "desc": false }],
        "footer": { "show": false }
      }
    },
    {
      "id": 7,
      "title": "Cascade Impact",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 19 },
      "collapsed": false
    },
    {
      "id": 8,
      "title": "Cascade Impact Chain",
      "description": "Services that depend on other services with their own failures — cascade impact L1",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "group by (name, namespace, dependency) (\n  label_replace(\n    app_dependency_health{namespace=~\"$namespace\"},\n    \"dep_name\", \"$1\", \"dependency\", \"(.*)\"\n  )\n  and on (dep_name)\n  label_replace(\n    group by (name) (app_dependency_health{namespace=~\"$namespace\"} == 0),\n    \"dep_name\", \"$1\", \"name\", \"(.*)\"\n  )\n)",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true
            },
            "indexByName": {
              "name": 0,
              "namespace": 1,
              "dependency": 2
            },
            "renameByName": {
              "name": "Affected Service",
              "namespace": "Namespace",
              "dependency": "Depends On (has failures)"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Affected Service" },
            "properties": [
              { "id": "custom.width", "value": 200 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Depends On (has failures)" },
            "properties": [
              { "id": "custom.width", "value": 200 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Affected Service", "desc": false }],
        "footer": { "show": false }
      }
    },
    {
      "id": 9,
      "title": "Service Health Timeline",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 28 },
      "collapsed": false
    },
    {
      "id": 10,
      "title": "Dependency Health",
      "description": "Health state timeline for the selected service",
      "type": "state-timeline",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 29 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 0,
            "fillOpacity": 80
          },
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "links": [
            {
              "title": "Link Status →",
              "url": "/d/dephealth-link-status/?var-dependency=${__field.labels.dependency}&var-host=${__field.labels.host}&var-port=${__field.labels.port}&${__url_time_range}",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "showValue": "auto",
        "mergeValues": true,
        "rowHeight": 0.8,
        "alignValue": "center",
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "app_dependency_health{job=~\"$service\", namespace=~\"$namespace\"}",
          "legendFormat": "{{dependency}} ({{host}}:{{port}})",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["dephealth"],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Datasource"
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health, namespace)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] },
        "hide": 0,
        "label": "Namespace"
      },
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health{namespace=~\"$namespace\"}, job)",
        "refresh": 2,
        "includeAll": false,
        "multi": false,
        "current": {},
        "hide": 0,
        "label": "Service"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "dephealth: Root Cause Analyzer",
  "uid": "dephealth-root-cause",
  "version": 1
}
