{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "datasource", "id": "yesoreyeram-infinity-datasource", "name": "Infinity", "version": "2.0.0" }
  ],
  "annotations": {
    "list": [
      {
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "enable": false,
        "expr": "changes(app_dependency_health{namespace=~\"$namespace\", name=~\"$service\"}[1m]) > 0 or changes(app_dependency_health{namespace=~\"$namespace\", dependency=~\"$service\"}[1m]) > 0",
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Health state changes",
        "tagKeys": "dependency,host",
        "titleFormat": "{{dependency}} @ {{host}}:{{port}}"
      }
    ]
  },
  "description": "Root cause analysis for dependency failures — identify leaf failures and cascade impact (powered by BFS API, unlimited depth)",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "apps",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Service List",
      "type": "link",
      "url": "/d/dephealth-service-list/"
    },
    {
      "asDropdown": false,
      "icon": "bolt",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Cascade Overview",
      "type": "link",
      "url": "/d/dephealth-cascade-overview/"
    }
  ],
  "panels": [
    {
      "id": 1,
      "title": "Root Causes",
      "description": "Leaf failures reachable from the selected service (unlimited depth via BFS)",
      "type": "stat",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis?service=${service}",
          "url_options": { "method": "GET" },
          "root_selector": "summary",
          "columns": [
            { "selector": "rootCauseCount", "text": "Count", "type": "number" }
          ]
        }
      ]
    },
    {
      "id": 2,
      "title": "Cascade Affected",
      "description": "Services in dependency tree affected by cascading failures (unlimited depth via BFS)",
      "type": "stat",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis?service=${service}",
          "url_options": { "method": "GET" },
          "root_selector": "summary",
          "columns": [
            { "selector": "affectedServiceCount", "text": "Count", "type": "number" }
          ]
        }
      ]
    },
    {
      "id": 3,
      "title": "Total Failures",
      "description": "Total failures reachable from selected service (unlimited depth via BFS)",
      "type": "stat",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis?service=${service}",
          "url_options": { "method": "GET" },
          "root_selector": "summary",
          "columns": [
            { "selector": "totalFailureCount", "text": "Count", "type": "number" }
          ]
        }
      ]
    },
    {
      "id": 4,
      "title": "Root Cause Analysis",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 4 },
      "collapsed": false
    },
    {
      "id": 5,
      "title": "Root Causes",
      "description": "Dependencies that are the actual root causes — terminal failures with no further downstream issues",
      "type": "table",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 5 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis?service=${service}",
          "url_options": { "method": "GET" },
          "root_selector": "rootCauses",
          "columns": [
            { "selector": "label", "text": "Root Cause", "type": "string" },
            { "selector": "type", "text": "Type", "type": "string" },
            { "selector": "namespace", "text": "Namespace", "type": "string" },
            { "selector": "state", "text": "State", "type": "string" }
          ]
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Root Cause" },
            "properties": [
              { "id": "custom.minWidth", "value": 300 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "State" },
            "properties": [
              { "id": "custom.minWidth", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": { "show": false }
      }
    },
    {
      "id": 6,
      "title": "All Failures",
      "description": "All dependency health check failures reachable from selected service (unlimited depth)",
      "type": "table",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 11 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis?service=${service}",
          "url_options": { "method": "GET" },
          "root_selector": "allFailures",
          "columns": [
            { "selector": "service", "text": "Service", "type": "string" },
            { "selector": "namespace", "text": "Namespace", "type": "string" },
            { "selector": "dependency", "text": "Dependency", "type": "string" },
            { "selector": "type", "text": "Type", "type": "string" },
            { "selector": "host", "text": "Host", "type": "string" },
            { "selector": "port", "text": "Port", "type": "string" }
          ]
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Service" },
            "properties": [
              { "id": "custom.minWidth", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Dependency" },
            "properties": [
              { "id": "custom.minWidth", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Type" },
            "properties": [
              { "id": "custom.minWidth", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Host" },
            "properties": [
              { "id": "custom.minWidth", "value": 260 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Port" },
            "properties": [
              { "id": "custom.minWidth", "value": 80 }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Service", "desc": false }],
        "footer": { "show": false }
      }
    },
    {
      "id": 7,
      "title": "Cascade Impact",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 19 },
      "collapsed": false
    },
    {
      "id": 8,
      "title": "Cascade Impact Chain",
      "description": "Full cascade paths from affected service to root causes (unlimited depth)",
      "type": "table",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis?service=${service}",
          "url_options": { "method": "GET" },
          "root_selector": "cascadeChains",
          "columns": [
            { "selector": "affectedService", "text": "Affected Service", "type": "string" },
            { "selector": "namespace", "text": "Namespace", "type": "string" },
            { "selector": "dependsOn", "text": "Depends On (has failures)", "type": "string" },
            { "selector": "depth", "text": "Depth", "type": "number" },
            { "selector": "path", "text": "Path", "type": "string" }
          ]
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Affected Service" },
            "properties": [
              { "id": "custom.minWidth", "value": 200 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Depends On (has failures)" },
            "properties": [
              { "id": "custom.minWidth", "value": 200 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Path" },
            "properties": [
              { "id": "custom.minWidth", "value": 400 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Depth" },
            "properties": [
              { "id": "custom.minWidth", "value": 80 }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Affected Service", "desc": false }],
        "footer": { "show": false }
      }
    },
    {
      "id": 9,
      "title": "Service Health Timeline",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 28 },
      "collapsed": false
    },
    {
      "id": 10,
      "title": "Dependency Health",
      "description": "Health state timeline for the selected service",
      "type": "state-timeline",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 29 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 0,
            "fillOpacity": 80
          },
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "links": [
            {
              "title": "Link Status →",
              "url": "/d/dephealth-link-status/?var-dependency=${__field.labels.dependency}&var-host=${__field.labels.host}&var-port=${__field.labels.port}&${__url_time_range}",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "showValue": "auto",
        "mergeValues": true,
        "rowHeight": 0.8,
        "alignValue": "center",
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "app_dependency_health{job=~\"$service\", namespace=~\"$namespace\"}\nor\napp_dependency_health{namespace=~\"$namespace\", dependency=~\"$service\"}",
          "legendFormat": "{{dependency}} ({{host}}:{{port}})",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["dephealth"],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Datasource"
      },
      {
        "name": "DS_INFINITY",
        "type": "datasource",
        "query": "yesoreyeram-infinity-datasource",
        "current": {},
        "hide": 0,
        "label": "Infinity"
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health, namespace)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] },
        "hide": 0,
        "label": "Namespace"
      },
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health{namespace=~\"$namespace\"}, job)",
        "refresh": 2,
        "includeAll": false,
        "multi": false,
        "current": {},
        "hide": 0,
        "label": "Service"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "dephealth: Root Cause Analyzer",
  "uid": "dephealth-root-cause",
  "version": 1
}
