{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "datasource", "id": "yesoreyeram-infinity-datasource", "name": "Infinity", "version": "2.0.0" }
  ],
  "annotations": {
    "list": [
      {
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "enable": false,
        "expr": "changes(app_dependency_health{namespace=~\"$namespace\"}[1m]) > 0",
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Health state changes",
        "tagKeys": "dependency,host",
        "titleFormat": "{{dependency}} @ {{host}}:{{port}}"
      }
    ]
  },
  "description": "Cascade overview — service states, cascade risks, dependency chain status (powered by BFS API, unlimited depth)",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "apps",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Service List",
      "type": "link",
      "url": "/d/dephealth-service-list/"
    },
    {
      "asDropdown": false,
      "icon": "fire",
      "includeVars": true,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Root Cause Analyzer",
      "type": "link",
      "url": "/d/dephealth-root-cause/"
    }
  ],
  "panels": [
    {
      "id": 1,
      "title": "Total Services",
      "description": "Total number of unique services reporting health metrics",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "blue", "mode": "fixed" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "count(group by (name) (app_dependency_health{namespace=~\"$namespace\"}))",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 2,
      "title": "Services with Problems",
      "description": "Services that have at least one failing dependency",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "count(group by (name) (app_dependency_health{namespace=~\"$namespace\"} == 0)) or vector(0)",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 3,
      "title": "Cascade Risk",
      "description": "Services affected by cascading failures (unlimited depth via BFS)",
      "type": "stat",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis",
          "url_options": { "method": "GET" },
          "root_selector": "summary",
          "columns": [
            { "selector": "affectedServiceCount", "text": "Count", "type": "number" }
          ]
        }
      ]
    },
    {
      "id": 4,
      "title": "Root Causes",
      "description": "Leaf failures — the actual root causes (unlimited depth via BFS)",
      "type": "stat",
      "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "yesoreyeram-infinity-datasource", "uid": "${DS_INFINITY}" },
          "type": "json",
          "source": "url",
          "format": "table",
          "url": "http://dephealth-ui.dephealth-ui.svc:8080/api/v1/cascade-analysis",
          "url_options": { "method": "GET" },
          "root_selector": "summary",
          "columns": [
            { "selector": "rootCauseCount", "text": "Count", "type": "number" }
          ]
        }
      ]
    },
    {
      "id": 5,
      "title": "Service State Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 4 },
      "collapsed": false
    },
    {
      "id": 6,
      "title": "Service State",
      "description": "3-level service state: Failure (red) = own deps are DOWN, Cascade Risk (orange) = downstream deps have failures, OK (green) = all healthy",
      "type": "state-timeline",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 5 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 0,
            "fillOpacity": 80
          },
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "OK", "color": "green" },
                "1": { "text": "Cascade Risk", "color": "orange" },
                "2": { "text": "Failure", "color": "red" }
              }
            }
          ],
          "links": [
            {
              "title": "Root Cause Analyzer →",
              "url": "/d/dephealth-root-cause/?var-namespace=${__field.labels.namespace}&var-service=${__field.labels.name}&${__url_time_range}",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "showValue": "auto",
        "mergeValues": true,
        "rowHeight": 0.8,
        "alignValue": "center",
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "clamp_max(\n  (count by (name, namespace) (app_dependency_health{namespace=~\"$namespace\"} == 0) > 0) * 2\n  or\n  (\n    group by (name, namespace) (\n      label_replace(\n        app_dependency_health{namespace=~\"$namespace\"},\n        \"dep_name\", \"$1\", \"dependency\", \"(.*)\"\n      )\n      and on (dep_name)\n      label_replace(\n        group by (name) (app_dependency_health{namespace=~\"$namespace\"} == 0),\n        \"dep_name\", \"$1\", \"name\", \"(.*)\"\n      )\n    ) * 0 + 1\n  )\n  or\n  (group by (name, namespace) (app_dependency_health{namespace=~\"$namespace\"}) * 0),\n  2\n)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Dependency Chain",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "collapsed": false
    },
    {
      "id": 8,
      "title": "Full Dependency Status",
      "description": "All dependency edges with health status and root cause annotation",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "app_dependency_health{namespace=~\"$namespace\", type=~\"$dependency_type\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "pod": true,
              "critical": true
            },
            "indexByName": {
              "name": 0,
              "namespace": 1,
              "dependency": 2,
              "type": 3,
              "host": 4,
              "port": 5,
              "Value": 6
            },
            "renameByName": {
              "name": "Service",
              "namespace": "Namespace",
              "dependency": "Dependency",
              "type": "Type",
              "host": "Host",
              "port": "Port",
              "Value": "Health",
              "job": "Job"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Service" },
            "properties": [
              { "id": "custom.width", "value": 160 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Service Status →",
                    "url": "/d/dephealth-service-status/?var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Dependency" },
            "properties": [
              { "id": "custom.width", "value": 160 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Root Cause Analyzer →",
                    "url": "/d/dephealth-root-cause/?var-namespace=${__data.fields.Namespace}&var-service=${__value.text}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Type" },
            "properties": [
              { "id": "custom.width", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Host" },
            "properties": [
              { "id": "custom.width", "value": 260 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Port" },
            "properties": [
              { "id": "custom.width", "value": 80 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Job" },
            "properties": [
              { "id": "custom.hidden", "value": true }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Health" },
            "properties": [
              { "id": "custom.width", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "green", "value": 1 }
                  ]
                }
              },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Health", "desc": false }],
        "footer": { "show": false }
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["dephealth"],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Datasource"
      },
      {
        "name": "DS_INFINITY",
        "type": "datasource",
        "query": "yesoreyeram-infinity-datasource",
        "current": {},
        "hide": 0,
        "label": "Infinity"
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health, namespace)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] },
        "hide": 0,
        "label": "Namespace"
      },
      {
        "name": "dependency_type",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health{namespace=~\"$namespace\"}, type)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] },
        "hide": 0,
        "label": "Dependency Type"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "dephealth: Cascade Overview",
  "uid": "dephealth-cascade-overview",
  "version": 1
}
