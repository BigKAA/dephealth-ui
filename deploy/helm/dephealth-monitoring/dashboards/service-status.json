{
  "__inputs": [],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" }
  ],
  "annotations": {
    "list": [
      {
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "enable": false,
        "expr": "changes(app_dependency_health{job=~\"$service\"}[1m]) > 0",
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Изменения состояния",
        "tagKeys": "dependency,host",
        "titleFormat": "{{dependency}} @ {{host}}:{{port}}"
      }
    ]
  },
  "description": "Детальный статус зависимостей выбранного сервиса",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "arrow-left",
      "includeVars": false,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Service List",
      "type": "link",
      "url": "/d/dephealth-service-list/"
    },
    {
      "asDropdown": false,
      "icon": "link",
      "includeVars": false,
      "keepTime": true,
      "tags": [],
      "targetBlank": false,
      "title": "Links Status",
      "type": "link",
      "url": "/d/dephealth-links-status/"
    }
  ],
  "panels": [
    {
      "id": 1,
      "title": "Текущее состояние",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Текущий статус",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 5, "w": 8, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#9e9e9e", "value": null },
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" },
          "mappings": [
            { "type": "value", "options": { "-1": { "text": "STALE", "color": "#9e9e9e" }, "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } },
            { "type": "special", "options": { "match": "null", "result": { "text": "STALE", "color": "#9e9e9e" } } }
          ],
          "links": [
            {
              "title": "Статус соединения \u2192",
              "url": "/d/dephealth-link-status/?var-dependency=${__field.labels.dependency}&var-host=${__field.labels.host}&var-port=${__field.labels.port}&${__url_time_range}",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value_and_name",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "(min by (dependency, type, host, port) (app_dependency_health{job=~\"$service\"})) or (min by (dependency, type, host, port) (last_over_time(app_dependency_health{job=~\"$service\"}[$__range])) * 0 - 1)",
          "legendFormat": "{{dependency}}",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 22,
      "title": "Категория статуса",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 5, "w": 8, "x": 8, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "gray", "value": null }]
          },
          "mappings": [
            { "type": "value", "options": {
              "0": { "text": "ok", "color": "#4caf50" },
              "1": { "text": "timeout", "color": "#ff9800" },
              "2": { "text": "conn_error", "color": "#f44336" },
              "3": { "text": "dns_error", "color": "#9c27b0" },
              "4": { "text": "auth_error", "color": "#ffeb3b" },
              "5": { "text": "tls_error", "color": "#b71c1c" },
              "6": { "text": "unhealthy", "color": "#ff5722" },
              "7": { "text": "error", "color": "#f44336" }
            }},
            { "type": "special", "options": { "match": "null", "result": { "text": "N/A", "color": "#9e9e9e" } } }
          ]
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value_and_name",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "max by (dependency) ((app_dependency_status{job=~\"$service\", status=\"ok\"} == 1) * 0 or (app_dependency_status{job=~\"$service\", status=\"timeout\"} == 1) * 1 or (app_dependency_status{job=~\"$service\", status=\"connection_error\"} == 1) * 2 or (app_dependency_status{job=~\"$service\", status=\"dns_error\"} == 1) * 3 or (app_dependency_status{job=~\"$service\", status=\"auth_error\"} == 1) * 4 or (app_dependency_status{job=~\"$service\", status=\"tls_error\"} == 1) * 5 or (app_dependency_status{job=~\"$service\", status=\"unhealthy\"} == 1) * 6 or (app_dependency_status{job=~\"$service\", status=\"error\"} == 1) * 7)",
          "legendFormat": "{{dependency}}",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 23,
      "title": "Детали статуса",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 5, "w": 8, "x": 16, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "gray", "value": null }]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "error", "color": "red" }, "1": { "text": "ok", "color": "green" } } },
            { "type": "special", "options": { "match": "null", "result": { "text": "N/A", "color": "#9e9e9e" } } }
          ]
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value_and_name",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "(min by (dependency, type, host, port) (app_dependency_health{job=~\"$service\"})) * on(dependency, type, host, port) group_left(detail) (max by (dependency, type, host, port, detail) (app_dependency_status_detail{job=~\"$service\"} == 1))",
          "legendFormat": "{{dependency}}",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 3,
      "title": "SLA / Доступность за период",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 95 },
              { "color": "green", "value": 99 }
            ]
          },
          "color": { "mode": "thresholds" },
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "background",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "min by (dependency, type, host, port) (avg_over_time(app_dependency_health{job=~\"$service\"}[$__range])) * 100",
          "legendFormat": "{{dependency}} ({{host}}:{{port}})",
          "refId": "A",
          "instant": true,
          "range": false
        }
      ]
    },
    {
      "id": 4,
      "title": "Таблица endpoint-ов",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "min by (dependency, type, host, port) (last_over_time(app_dependency_health{job=~\"$service\"}[$__range]))",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (dependency, type, host, port, le) (rate(app_dependency_latency_seconds_bucket{job=~\"$service\"}[5m])))",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "sum by (dependency, type, host, port) (rate(app_dependency_latency_seconds_sum{job=~\"$service\"}[5m])) / sum by (dependency, type, host, port) (rate(app_dependency_latency_seconds_count{job=~\"$service\"}[5m]))",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "max by (dependency, type, host, port) (changes(app_dependency_health{job=~\"$service\"}[15m]))",
          "format": "table",
          "instant": true,
          "refId": "D"
        },
        {
          "expr": "clamp_max(count by (dependency, type, host, port) (app_dependency_health{job=~\"$service\"}), 1)",
          "format": "table",
          "instant": true,
          "refId": "E"
        }
      ],
      "transformations": [
        { "id": "merge", "options": {} },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "namespace": true,
              "job": true,
              "instance": true,
              "critical": true,
              "name": true,
              "pod": true,
              "service": true,
              "le": true
            },
            "indexByName": {
              "dependency": 0,
              "type": 1,
              "host": 2,
              "port": 3,
              "Value #E": 4,
              "Value #A": 5,
              "Value #B": 6,
              "Value #C": 7,
              "Value #D": 8
            },
            "renameByName": {
              "dependency": "Зависимость",
              "type": "Тип",
              "host": "Хост",
              "port": "Порт",
              "Value #E": "Свежесть",
              "Value #A": "Статус",
              "Value #B": "P99 (сек)",
              "Value #C": "Avg (сек)",
              "Value #D": "Flapping"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "displayMode": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Зависимость" },
            "properties": [
              { "id": "custom.minWidth", "value": 180 },
              {
                "id": "links",
                "value": [
                  {
                    "title": "Статус соединения \u2192",
                    "url": "/d/dephealth-link-status/?var-dependency=${__value.text}&var-host=${__data.fields[\"Хост\"]}&var-port=${__data.fields[\"Порт\"]}&${__url_time_range}",
                    "targetBlank": false
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Тип" },
            "properties": [
              { "id": "custom.minWidth", "value": 100 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Хост" },
            "properties": [
              { "id": "custom.minWidth", "value": 220 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Порт" },
            "properties": [
              { "id": "custom.minWidth", "value": 80 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Статус" },
            "properties": [
              { "id": "custom.minWidth", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "green", "value": 1 }
                  ]
                }
              },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } },
                  { "type": "special", "options": { "match": "null", "result": { "text": "N/A", "color": "#9e9e9e" } } }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "P99 (сек)" },
            "properties": [
              { "id": "unit", "value": "s" },
              { "id": "decimals", "value": 3 },
              { "id": "custom.minWidth", "value": 120 },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 0.1 },
                    { "color": "red", "value": 1 }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Avg (сек)" },
            "properties": [
              { "id": "unit", "value": "s" },
              { "id": "decimals", "value": 3 },
              { "id": "custom.minWidth", "value": 120 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Flapping" },
            "properties": [
              { "id": "custom.minWidth", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "mode": "thresholds" } },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "orange", "value": 4 },
                    { "color": "red", "value": 8 }
                  ]
                }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Свежесть" },
            "properties": [
              { "id": "custom.minWidth", "value": 110 },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "basic" } },
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "text" } },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "1": { "text": "Актуально", "color": "#4caf50" } } },
                  { "type": "special", "options": { "match": "null", "result": { "text": "Устарело", "color": "#9e9e9e" } } }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "sortBy": [{ "displayName": "Статус", "desc": false }],
        "footer": { "show": false }
      }
    },
    {
      "id": 5,
      "title": "Здоровье зависимостей (timeline)",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false
    },
    {
      "id": 6,
      "title": "app_dependency_health",
      "type": "state-timeline",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 0,
            "fillOpacity": 80
          },
          "color": { "mode": "fixed", "fixedColor": "gray" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "gray", "value": null }]
          },
          "mappings": [
            { "type": "range", "options": { "from": -0.5, "to": 0.5, "result": { "text": "DOWN", "color": "red", "index": 0 } } },
            { "type": "range", "options": { "from": 0.5, "to": 1.5, "result": { "text": "UP", "color": "green", "index": 1 } } }
          ],
          "links": [
            {
              "title": "Статус соединения \u2192",
              "url": "/d/dephealth-link-status/?var-dependency=${__field.labels.dependency}&var-host=${__field.labels.host}&var-port=${__field.labels.port}&${__url_time_range}",
              "targetBlank": false
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "showValue": "auto",
        "mergeValues": true,
        "rowHeight": 0.8,
        "alignValue": "center",
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "min by (dependency, type, host, port) (app_dependency_health{job=~\"$service\"})",
          "legendFormat": "{{dependency}} ({{host}}:{{port}})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Латентность",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false
    },
    {
      "id": 8,
      "title": "Латентность проверок (heatmap)",
      "type": "heatmap",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "fieldConfig": {
        "defaults": { "custom": {} },
        "overrides": []
      },
      "options": {
        "calculate": false,
        "cellGap": 1,
        "color": {
          "exponent": 0.5,
          "fill": "dark-orange",
          "mode": "scheme",
          "scale": "exponential",
          "scheme": "Oranges",
          "steps": 64
        },
        "yAxis": { "unit": "s" },
        "tooltip": { "show": true, "yHistogram": true },
        "exemplars": { "color": "rgba(255,0,255,0.7)" },
        "filterValues": { "le": 1e-9 },
        "legend": { "show": true },
        "rowsFrame": { "layout": "auto" },
        "showValue": "never"
      },
      "targets": [
        {
          "expr": "sum by (dependency, le) (rate(app_dependency_latency_seconds_bucket{job=~\"$service\"}[$__rate_interval]))",
          "legendFormat": "{{le}}",
          "format": "heatmap",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "P99 латентность по зависимости",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max", "lastNotNull"] }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (dependency, type, host, port, le) (rate(app_dependency_latency_seconds_bucket{job=~\"$service\"}[5m])))",
          "legendFormat": "{{dependency}} ({{host}}:{{port}})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "Средняя латентность по зависимости",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max", "lastNotNull"] }
      },
      "targets": [
        {
          "expr": "sum by (dependency, type, host, port) (rate(app_dependency_latency_seconds_sum{job=~\"$service\"}[5m])) / sum by (dependency, type, host, port) (rate(app_dependency_latency_seconds_count{job=~\"$service\"}[5m]))",
          "legendFormat": "{{dependency}} ({{host}}:{{port}})",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["dephealth"],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Datasource"
      },
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(app_dependency_health, job)",
        "refresh": 2,
        "includeAll": false,
        "multi": false,
        "current": {},
        "hide": 0,
        "label": "Сервис"
      }
    ]
  },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "",
  "title": "dephealth: Service Status",
  "uid": "dephealth-service-status",
  "version": 1
}
